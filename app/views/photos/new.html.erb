  <div class="form-group">
    <%= f.label :title %>
    
      <%= f.text_field :title , class: 'form-control', required: true %> <%#= f.text_field :title, required: true %>

  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, required: true %>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
<% end %>



